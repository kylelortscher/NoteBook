	<%= form_for @note do |f| %>
	  <% if @note.errors.any? %>
	    <div id="errors">
	     <h2><%= pluralize(@note.errors.count, "error") %> preveneted this post from saving</h2>
      <ul>
				<% @note.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
	    </div>	
	  <% end %>
		<p>
			<%= f.label :title %><br>
			<%= f.text_field :title %><br>
		</p>
		<p>
			<%= f.label :content %><br>
			<%= f.text_area :content %><br>
		</p>
		<p>	
			<%= f.submit %>
		</p>
	<% end %>